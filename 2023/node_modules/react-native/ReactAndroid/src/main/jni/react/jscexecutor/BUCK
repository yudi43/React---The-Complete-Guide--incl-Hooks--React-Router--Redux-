    name = "jni",
    srcs = glob(["*.cpp"]),
    headers = glob(["*.h"]),
    header_namespace = "",
    compiler_flags_enable_exceptions = True,  # TODO: is this necessary?
    compiler_flags_enable_rtti = True,  # TODO: is this necessary?
